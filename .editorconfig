root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{rst,py}]
indent_size = 4
indent_style = space
max_line_length = 79

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2

[*.sh]
indent_size = 4

[Dockerfile*]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
